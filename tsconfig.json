{
	"compilerOptions": {
		"target": "es5", // 目标 ECMAScript 版本
		"module": "commonjs", // 模块系统，如果是 Node.js 项目使用 commonjs
		"lib": ["esnext"], // 使用的内置库
		"strict": true, // 启用所有严格的类型检查选项
		"esModuleInterop": true, // 允许导入默认值为 ES 模块
		"skipLibCheck": true, // 跳过对声明文件的检查
		"forceConsistentCasingInFileNames": true, // 强制文件名中的一致性
		"moduleResolution": "node", // 模块解析策略，如果是 Node.js 项目使用 node
		"resolveJsonModule": true, // 允许导入 JSON 文件作为模块
		"declaration": true, // 生成声明文件（.d.ts）
		"outDir": "./dist", // 输出目录
		"rootDir": "./src" // 源代码目录
	},
	"include": [
		"src/**/*.ts" // 需要包含的文件或文件夹
	],
	"exclude": [
		"node_modules" // 需要排除的文件或文件夹
	]
}
